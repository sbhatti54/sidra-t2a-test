<script type="text/javascript">
function checkForm()
{
  
    var phoneNumber = /^[2-9][0-8][0-9]\d+$/;
  
	 if (!document.form.mdn.value.match(phoneNumber) || (document.form.mdn.value == "")) {
        alert("Please enter your mobile phone number ex: 3195550000");
        document.form.mdn.focus();
        document.form.mdn.value = "";
        return false;
    }

	return true;

}
</script>

